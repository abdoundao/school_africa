<odoo>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="School Student">
                <button name="action_open_wizard" string="Generate Report" type="object" class="btn-primary"/>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="birth_date"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="class_id" options="{'no_create': True}"/>
                        <field name="tuition_fees"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="color"/>
                    </group>
                    <group string="Parent 1 Information">
                        <field name="parent1_name"/>
                        <field name="parent1_phone"/>
                        <field name="parent1_email"/>
                        <field name="parent1_address"/>
                    </group>
                    <group string="Parent 2 Information">
                        <field name="parent2_name"/>
                        <field name="parent2_phone"/>
                        <field name="parent2_email"/>
                        <field name="parent2_address"/>
                    </group>
                    <notebook>
                        <page string="Payments">
                            <field name="payment_line_ids" readonly="1">
                                <tree string="Payment Lines">
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="amount"/>
                                    <field name="status"/>
                                    <field name="payment_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Absences">
                            <field name="absence_ids" readonly="1">
                                <tree string="Absences">
                                    <field name="session_id"/>
                                    <field name="justified"/>
                                    <field name="justification_attachment_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="note_ids" readonly="1">
                                <tree string="Notes">
                                    <field name="evaluation_id"/>
                                    <field name="result"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="School Student">
                <field name="name"/>
                <field name="birth_date"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="class_id"/>
            </tree>
        </field>
    </record>

    <record id="student_report_action" model="ir.actions.report">
        <field name="name">Student Report</field>
        <field name="model">student.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_africa.student_report_template</field>
        <field name="report_file">school_africa.student_report_template</field>
    </record>

</odoo>
