<odoo>
    <record id="view_period_form" model="ir.ui.view">
        <field name="name">school.period.form</field>
        <field name="model">school.period</field>
        <field name="arch" type="xml">
            <form string="School Period">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="position"/>
                        <field name="school_year_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_period_tree" model="ir.ui.view">
        <field name="name">school.period.tree</field>
        <field name="model">school.period</field>
        <field name="arch" type="xml">
            <tree string="School Period">
                <field name="name"/>
                <field name="position"/>
                <field name="school_year_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>
</odoo>
