<odoo>
    <record id="view_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="School Class">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="main_professor_id" options="{'no_create': True}"/>
                        <field name="school_year_id" options="{'no_create': True}"/>
                        <field name="level_id"/>
                        <field name="student_ids">
                            <tree string="Students">
                                <field name="name"/>
                                <field name="birth_date"/>
                                <field name="email"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="color"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_class_tree" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="School Class">
                <field name="name"/>
                <field name="school_year_id" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>
</odoo>
