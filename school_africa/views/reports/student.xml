<odoo>

    <record id="action_open_student_report_wizard" model="ir.actions.act_window">
        <field name="name">Student Report Wizard</field>
        <field name="res_model">student.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_student_report_wizard_form" model="ir.ui.view">
        <field name="name">student.report.wizard.form</field>
        <field name="model">student.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Student Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>

